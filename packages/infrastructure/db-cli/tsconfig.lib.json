{
  "extends": "@rayltics/tsconfig/nest",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "tsBuildInfoFile": "tsconfig.lib.tsbuildinfo",
    "composite": false,
    "esModuleInterop": true,
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "**/__tests__/*.ts",
    "**/playgrounds/*.ts"
  ]
}
